input-view {
  match: NumberOfAstronauts(numberOfAstronauts)
  message {
    template-macro (NUMBER_OF_ASTRONAUTS_SELECTION)
  }
  render {
    selection-of (numberOfAstronauts) {
      where-each (numberOfAstronauts) {
        cell-card {
          slot2 {
            content {
              primary {
                template ("#{value (numberOfAstronauts)}")
              }
            }
          }
        }
      }
    }
  }
}