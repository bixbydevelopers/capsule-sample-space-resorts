input-view {
  match: NumberOfAstronauts(noOfAstronauts)
  render {
    if (size(noOfAstronauts) > 1) {
      selection-of (noOfAstronauts) {
        where-each (noOfAstronaut) {
          layout-match (noOfAstronaut) {
            mode (Summary)
          }
        }
      }
    } else-if (size(noOfAstronauts) == 1) {
      // Unexpected
    }
  }
}