layout-macro-def (receipt-order-total) {
  params {
    param (receipt) {
      type (Receipt)
      min (Required) max (One)
    }
  }
  content {
    section {
      content {
        title-area {
          halign (Start)
          slot1 {
            text {
              style (Detail_L_Soft)
              value {
                template-macro (OrderTotal) {
                  param (value) { dialog-template("#{value(receipt.item.pod.price)}")}
                }
              }
            }
          }
        }
      }
    }
  }
}