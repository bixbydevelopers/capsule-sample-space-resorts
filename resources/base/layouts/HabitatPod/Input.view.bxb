input-view {
  match: HabitatPod(pods)
  message {
    template ("Which habitat pod would you like?")
  }
  render {
    if (size(pods) > 1) {
      selection-of (pods) {
        where-each (pod) {
          layout-match (pod) {
            mode (Summary)
          }
        }
      }
    } else-if (size(pods) == 1) {
      // Unexpected
    }
  }
}