input-view {
  match: HabitatPod(pods)
  message {
    template-macro (WhichHavitatPodWouldYouLike)
  }
  render {
    if (size(pods) > 1) {
      selection-of (pods) {
        where-each (pod) {
          layout-match (pod) {
            mode (Summary)
          }
        }
      }
    }
    // else-if (size(pods) == 1) {
    //   // Unexpected
    // }
  }
}