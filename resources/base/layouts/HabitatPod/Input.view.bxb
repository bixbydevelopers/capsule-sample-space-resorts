input-view {
  match: HabitatPod(pods)
  message {
    template-macro (HABITAT_POD_SELECTION)
  }
  render {
    selection-of (pods) {
      where-each (pod) {
        layout-macro (habitat-pod-summary) {
          param (habitatPod) {
            expression (pod)
          }
        }
        spoken-summary {
          template-macro ("HABITAT_POD_SUMMARY") { param(habitatPod) { expression(pod) } }
        }
      }
    }
  }
}