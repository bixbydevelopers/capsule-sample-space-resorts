template-macro-def (SPACE_RESORT_RESULT) {
  params {
    param (result) {
      type (SpaceResort)
      min (Required) max (One)
    }
    // TODO: Get device from UEL when it becomes exposed
    param (device) {
      type (core.Text)
      min (Required) max (One)
    }
  }
  content {
    if (size(result) == 1) {
      template ("#{concept(result)}를 찾았습니다.")
    } else {
      template ("#{concept(result)}들을 찾았습니다.")
    }
  }
}

